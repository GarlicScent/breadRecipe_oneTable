    <!-- 부트스트랩 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- 슬라이드 라이브러리 CDN -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <style>
      /* 전체 width */
      .cooking-class {
        width: 80vw;
        margin: 0 auto;
      }
      .post-slider{
        position: relative;
      }
      .post-slider .post-wrapper{
        margin:0px auto;
        height: 300px;
      }
      .post-slider .post-wrapper .post{
        /* width:300px; */
        /* height:350px; */
        display:inline-block;
      }
      .post > a , .post > a > img {
        width: 100%;
        height: 100%;
        padding: 4px;
      } 
      
      /* first floor slide button */
      .slick-prev , .slick-next {
        border: 0px;
        background-color: white;
      }
      #prev-button , #next-button {
        font-size: 25px;
        background-color: white;
        border: 0px;
      }
      .slick-prev {
        position: absolute;
        left: -50px;
        top: 45%;
      }
      .slick-next {
        position: absolute;
        right: -50px;
        top: 45%;
      }
      .post > a {
        position: relative;
      }
      .post > a > div {
        position: absolute;
        width: 100vw;
      }


    </style>
  </head>

  <body>
    <%-include("navbar.ejs")%>

    <div class="cooking-class">
      <div>쿠킹 클래스</div>
      <div class="post-slider">
        <div class="post-wrapper">
          <div class="post"><a href="#"><div>요리연구가 박혜숙의 방구석 쿠킹 - 프랑스편</div><img src="../static/img/a.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/b.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/a.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/b.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/a.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/a.jpg"></a></div>
          <div class="post"><a href="#"><img src="../static/img/a.jpg"></a></div>
        </div>
      </div>
    </div>

    <%-include("footer.ejs")%>

    <script>
       $('.post-wrapper').slick({
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 3,
        prevArrow : "<button type='button' class='slick-prev' id='prev-button'><i class='fa-solid fa-chevron-left'></i></button>",		// 이전 화살표 모양 설정
				nextArrow : "<button type='button' class='slick-next' id='prev-button'><i class='fa-solid fa-chevron-right'></i></button>",	
        responsive: [
          {
            breakpoint: 970,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 2,
            }
          }
        ]
      });
    </script>
  </body>
  </html>
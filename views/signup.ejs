        function readImage(input) {

            if (input.files && input.files[0]) {
                // 이미지 파일인지 검사 (생략)
                // FileReader 인스턴스 생성
                const reader = new FileReader()
                    // 이미지가 로드가 된 경우
                reader.onload = e => {
                        const previewImage = document.getElementById("img")
                        previewImage.src = e.target.result
                    }
                    // reader가 이미지 읽도록 하기
                reader.readAsDataURL(input.files[0])
            }
        }

